<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/scardView"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    android:foreground="?android:selectableItemBackground"
    cardview.cardCornerRadius="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgview1"
            android:layout_width="119dp"
            android:layout_height="132dp"
            android:src="@drawable/index"
            app:layout_constraintBottom_toTopOf="@+id/phototxtview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phototxtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imgname"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgview1"
            app:layout_constraintStart_toStartOf="@+id/imgview1"
            app:layout_constraintTop_toBottomOf="@+id/imgview1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>